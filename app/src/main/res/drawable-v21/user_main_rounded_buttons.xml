<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="0.5dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#87CEFA" android:endColor="#87CEEB"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="0.5dp" android:color="#5e7974" />
            <solid android:color="#B0E2FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="0.5dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#87CEEB" android:endColor="#4D5DADE2" />
        </shape>
    </item>
</selector>