<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jching001.uiloloolol.Usermenu">

    <RelativeLayout
        android:layout_width="250dp"
        android:background="@drawable/usermenulayout"
        android:layout_height="match_parent">


    <Button
        android:layout_margin="10dp"
        android:id="@+id/menubutton"
        android:layout_height="30sp"
        android:layout_width="30sp"
        android:background="@drawable/menubutton"/>

        <RelativeLayout
            android:layout_below="@+id/menubutton"
            android:id="@+id/userpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:background="#4D000000"
        android:layout_height="100dp" />

    <Button
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:textSize="13dp"
        android:textAlignment="center"
        android:layout_height="20dp"
        android:background="@drawable/changebutton"
        android:text="Change"
         />
        </RelativeLayout>

<TextView
    android:id="@+id/points"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/userpic"
    android:padding="10dp"
    android:textAlignment="center"
    android:text="2000 points"/>

        <TableLayout
            android:layout_below="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--This Table is used to hold onto all the buttons-->
        <Button
            android:id="@+id/favplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Favourite Place"/>
        <Button
            android:layout_marginTop="-9dp"
            android:id="@+id/healthchoice"
            android:layout_width="match_parent"
            android:text="Healthier Choice"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/valueset"
            android:layout_marginTop="-9dp"
            android:layout_width="match_parent"
            android:text="Value Set"
            android:layout_height="wrap_content" />

            <Button
                android:id="@+id/cheapset"
                android:layout_marginTop="-9dp"
                android:layout_width="match_parent"
                android:text="Cheapest Set"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/history"
                android:layout_marginTop="-9dp"
                android:layout_width="match_parent"
                android:text="History"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/settings"
                android:layout_marginTop="-9dp"
                android:layout_width="match_parent"
                android:text="Settings"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/logout"
                android:layout_marginTop="-9dp"
                android:layout_width="match_parent"
                android:text="Logout"
                android:layout_height="wrap_content" />


        </TableLayout>
    </RelativeLayout>
</FrameLayout>
