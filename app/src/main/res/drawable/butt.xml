<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    //border out
    <item>
        <shape android:shape="rectangle">
            <size android:width="400dp" android:height="200dp" />
        </shape>
    </item>

    //inset
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#dcdcdc" android:endColor="#c9c9c9" />
        </shape>
    </item>

    //border in
    <item android:top="10dp" android:left="15dp" android:right="15dp" android:bottom="15dp">
        <shape android:shape="rectangle">

        </shape>
    </item>

    //inside
    <item android:top="7dp" android:left="7dp" android:right="7dp" android:bottom="7dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>