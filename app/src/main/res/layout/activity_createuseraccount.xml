<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:padding="20sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gamebreakers.login.Activity_CreateUserAccount">

    <ImageView
        android:id="@+id/logo"
        android:background="@drawable/fastfood"
        android:layout_marginTop="1sp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_width="182dp"
        android:layout_height="183dp" />

    <TextView
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:fontFamily="@font/nunito_bold"
        android:text="Username"/>

    <EditText
        android:id="@+id/register_usernameText"
        android:hint="Username"
        android:textColorHint="#999999"
        android:textColor="#999999"
        android:inputType="text"
        android:backgroundTint="#999999"
        android:fontFamily="@font/nunito_semibold"
        android:layout_below="@id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/register_password"
        android:layout_below="@id/register_usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/nunito_bold"
        android:text="Password"/>

    <EditText
        android:id="@+id/register_passwordText"
        android:hint="Password"
        android:textColorHint="#999999"
        android:textColor="#999999"
        android:inputType="textPassword"
        android:backgroundTint="#999999"
        android:fontFamily="@font/nunito_semibold"
        android:layout_below="@id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/register_confirmPasswordText"
        android:hint="Confirm Password"
        android:textColorHint="#999999"
        android:textColor="#999999"
        android:inputType="textPassword"
        android:backgroundTint="#999999"
        android:fontFamily="@font/nunito_semibold"
        android:layout_below="@id/register_passwordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:onClick="registerUserAccount"
        android:id="@+id/register_button"
        android:text="Register"
        android:background="@drawable/login_button"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingLeft="50sp"
        android:paddingRight="50sp"
        android:layout_marginTop="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@id/register_confirmPasswordText"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/already_member"
        android:text="Already a member? Login"
        android:textColor="#CCCC00"
        android:layout_marginTop="10sp"
        android:layout_below="@id/register_button"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    
</RelativeLayout>