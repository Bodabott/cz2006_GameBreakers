<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">

    <TextView
        android:id="@+id/foodActivityName"
        android:text="Food Activity"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/foodcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MergeRootFrame"
        android:layout_below="@id/foodActivityName">

    </FrameLayout>

    <Button
        android:id="@+id/returnToStallOrderActivity"
        android:onClick="goStallOrder"
        android:layout_centerInParent="true"
        android:layout_below="@id/foodcontainer"
        android:text="RETURN TO STALL ORDER ACTIVITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
