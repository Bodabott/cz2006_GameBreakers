<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#005050"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/owner_settings_stallName"
        android:text="Settings"
        android:textSize="30sp"
        android:textColor="#FFFF00"
        android:layout_marginLeft="15sp"
        android:layout_above="@id/buttonStorageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/back"
        android:text="BACK"
        android:layout_marginRight="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/buttonStorageLayout"
        android:background="#FFFFFF"
        android:layout_margin="15sp"
        android:layout_below="@id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:weightSum="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/settings_username"
                android:text="Username"
                android:inputType="text"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/settings_usernameButton"
                android:text="EDIT"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:weightSum="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/settings_password"
                android:text="Password"
                android:inputType="textPassword"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/settings_passwordButton"
                android:text="EDIT"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:weightSum="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/settings_stallName"
                android:text="Stall Name"
                android:inputType="text"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/settings_stallNameButton"
                android:text="EDIT"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Button
            android:id="@+id/settings_deleteAccountButton"
            android:text="DELETE ACCOUNT"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>
