<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/addmenu">

    <TextView
        android:id="@+id/addmenu_foodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Food Name:"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="201dp"/>

    <EditText
        android:id="@+id/addmenu_foodname"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/addmenu_foodText"
        android:ems="10"
        android:inputType="text"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/addmenu_dollar_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/addmenu_foodname"
        android:text="$"
        android:textSize="50sp"
        tools:layout_editor_absoluteY="201dp" />

    <EditText
        android:id="@+id/addmenu_dollar_price"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/addmenu_foodname"
        android:layout_toRightOf="@id/addmenu_dollar_sign"
        android:ems="10"
        android:inputType="number"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/addmenu_period_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/addmenu_foodname"
        android:layout_toRightOf="@id/addmenu_dollar_price"
        android:text="."
        android:textSize="50sp"/>

    <EditText
        android:id="@+id/addmenu_cents_price"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/addmenu_foodname"
        android:layout_toRightOf="@id/addmenu_period_sign"
        android:ems="10"
        android:inputType="number"
        android:textSize="50sp"
        android:maxLength="2" />



</RelativeLayout>