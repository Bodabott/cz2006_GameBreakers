<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#4D5DADE2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_alignTop="@+id/back"
        android:layout_toEndOf="@+id/back"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/back"
        android:id="@+id/stall_name_holder"
        android:text="Stall Name"
        android:textSize="30sp"
        android:textColor="#80000000"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:textAllCaps="false"
        android:background="#4D5DADE2"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:id="@+id/back"
        android:onClick="back"
        android:text="Back"
        android:fontFamily="serif-monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/fragment_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="80sp"
        android:layout_below="@id/back"/>

    <RelativeLayout
        android:id="@+id/addButton_Layout"
        android:background="#4D5DADE2"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:onClick="addMenuItem"
            android:id="@+id/add_item_icon"
            android:scaleX="0.10"
            android:scaleY="0.60"
            android:background="@drawable/ic_add_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>