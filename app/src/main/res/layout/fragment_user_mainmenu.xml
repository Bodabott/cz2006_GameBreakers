<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.gamebreakers.user.Fragment_User_MainMenu">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="#4D5DADE2  ">

        <RelativeLayout
            android:id="@+id/current_orders"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pastTransactions"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:background="@drawable/user_main_rounded_buttons">

            <ImageView
                android:id="@+id/currentOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/current_order"
                android:minHeight="60dp"
                android:minWidth="60dp" />

            <Button
                android:id="@+id/checkorderbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/currentOrders"
                android:background="#00f5f5f5"
                android:fontFamily="casual"
                android:onClick="checkOrders"
                android:padding="10dp"
                android:text="Current Orders"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textStyle="normal" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/pastTransactions"

            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"

            android:layout_margin="10dp"
            android:background="@drawable/user_main_rounded_buttons">

            <ImageView
                android:id="@+id/transactionimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calender_transactions"
                android:minHeight="60dp"
                android:minWidth="60dp" />

            <Button
                android:id="@+id/checktransactionbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/transactionimage"
                android:background="#00f5f5f5"
                android:fontFamily="casual"
                android:onClick="checkTransactions"
                android:padding="0dp"
                android:text="Past Transactions"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textStyle="italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Search"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/search_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="103dp"
                android:background="@drawable/search_layout"
                android:ems="10"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Search Here"
                android:textColor="#999999" />

            <ImageButton
                android:onClick="SearchStall"
                android:id="@+id/search_button"
                android:layout_width="52dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/search_field"
                android:layout_marginEnd="32dp"
                app:srcCompat="@mipmap/search_button" />


        </RelativeLayout>

        <Button
            android:onClick="browseStall"
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pastTransactions"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:background="@drawable/magnifying_glass"
            android:textSize="30dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pastTransactions"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:background="#FF0000"
            android:onClick="logout"
            android:text="LOG OUT" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/current_orders"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:background="#FF0000" />

    </RelativeLayout>

</FrameLayout>
