<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#4D5DADE2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/selected_stall"
        android:text="Stall: "
        android:fontFamily="casual"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="casual"
        android:layout_margin="5dp"
        android:id="@+id/selected_food"
        android:text="Food: "
        android:textSize="20sp"
        android:layout_below="@id/selected_stall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/chooseText"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:text="Choose a Stall:"
        android:textSize="30dp"
        android:background="#80A9CCE3"
        android:textColor="#EEEEEE"
        android:layout_below="@id/selected_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@id/chooseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include layout="@layout/fragment_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="50sp"/>

        <Button
            android:fontFamily="cursive"
            android:background="#00000000"
            android:id="@+id/back"
            android:onClick="back"
            android:text="BACK"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:fontFamily="cursive"
            android:background="#00000000"
            android:id="@+id/next"
            android:onClick="browseFood"
            android:text="NEXT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
