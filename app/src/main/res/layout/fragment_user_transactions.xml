<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#4D5DADE2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back"
        android:onClick="back"
        android:text="BACK"
        android:fontFamily="serif-monospace"
        android:background="#4D5DADE2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tran_hist_stallName"
        android:layout_toRightOf="@+id/back"
        android:layout_toEndOf="@+id/back"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="Transaction History"
        android:layout_alignTop="@id/back"
        android:textSize="30sp"
        android:textColor="#80000000"
        android:fontFamily="cursive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/fragment_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="80sp"
        android:layout_below="@id/back"/>

    <RelativeLayout
        android:id="@+id/clearAllStorageLayout"
        android:background="#4D5DADE2"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:onClick="clearAllTransactions"
            android:id="@+id/clearAllButton"
            android:textSize="50sp"
            android:scaleX="0.15"
            android:background="@drawable/ic_clear_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>
